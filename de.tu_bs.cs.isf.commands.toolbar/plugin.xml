<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.tu_bs.cs.isf.commands.toolbar.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="de.tu_bs.cs.isf.commands.toolbar.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.tu_bs.cs.isf.commands.toolbar.handler.VerifyHandler"
            id="de.tu_bs.cs.isf.commands.toolbar.command"
            name="VerifyStatements">
      </command>
      <command
            defaultHandler="de.tu_bs.cs.isf.commands.toolbar.handler.GenerateHandler"
            id="de.tu_bs.cs.isf.commands.toolbar.command1"
            name="GenerateGraphical">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="de.tu_bs.cs.isf.commands.toolbar.toolbar">
            <command
                  commandId="de.tu_bs.cs.isf.commands.toolbar.command"
                  icon="icons/keyproved16.png"
                  label="Verify Statements"
                  style="push">
            </command>
            <command
                  commandId="de.tu_bs.cs.isf.commands.toolbar.command1"
                  icon="icons/diagram.gif"
                  label="Generate Graphical Representation"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
